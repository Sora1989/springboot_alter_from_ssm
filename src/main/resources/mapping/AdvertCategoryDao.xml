<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.handpay.ibenefit.news.dao.AdvertCategoryDao">
   <resultMap id="advertCategory" type="com.handpay.ibenefit.news.entity.AdvertCategory">
    <id column="OBJECT_ID" property="objectId" jdbcType="DECIMAL" />
    	<result column="PLATFORM_CODE" property="platformCode" jdbcType="VARCHAR" />
    	<result column="PAGE_CODE" property="pageCode" jdbcType="VARCHAR" />
    	<result column="POSITION_CODE" property="positionCode" jdbcType="VARCHAR" />
    	<result column="LENGTH" property="length" jdbcType="VARCHAR" />
    	<result column="WIDTH" property="width" jdbcType="VARCHAR" />
    	<result column="PLATFORM_NAME" property="platformName" jdbcType="VARCHAR" />
    	<result column="PAGE_NAME" property="pageName" jdbcType="VARCHAR" />
        <result column="POSITION_NAME" property="positionName" jdbcType="VARCHAR" />
        <result column="TYPE" property="type" jdbcType="VARCHAR" />
        <result column="RECOMMEND_COUNT" property="recommendCount" jdbcType="VARCHAR" />
    </resultMap>
    
	<select id="getSecondCategoryByParam"   parameterType="Map"  resultMap="advertCategory">
  		select distinct t.page_code,t.page_name from IBS_ADVERT_POSITION t where 1=1
  		<if test="firstId!=null">
  			and  t.platform_code= #{firstId}
  		</if>
  		<if test="type!=null">
  			and  t.type= #{type}
  		</if>
	</select>
	<select id="getThirdCategoryByParam"   parameterType="Map"  resultMap="advertCategory">
  		select * from IBS_ADVERT_POSITION t where 1=1
  		<if test="secondId!=null">
  			and  t.page_code= #{secondId}
  		</if>
  		<if test="type!=null">
  			and  t.type= #{type}
  		</if>
	</select>	
	
	<select id="getAdvertCategoryByThirdId"   parameterType="String"  resultMap="advertCategory">
  		select * from IBS_ADVERT_POSITION t where t.position_code= #{thirdId}
	</select>
	
</mapper>